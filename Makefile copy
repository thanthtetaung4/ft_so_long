# Paths and Files
MLX_PATH = ./mlx
MLX_LIB = $(MLX_PATH)/libmlx.a
MLX_FLAGS = -L$(MLX_PATH) -Lmlx -lmlx -lXext -lX11

LIBFT_PATH = ./libft
LIBFT = $(LIBFT_PATH)/libft.a

# CFLAGS = -Wall -Wextra -Werror
CFLAGS =

# Source and object files
MAP_PATH = ./src/map
SRCS = src/main.c src/get_next_line/get_next_line.c src/get_next_line/get_next_line_utils.c \
		$(MAP_PATH)/initialise.c# Add other source files as needed
OBJS = $(SRCS:.c=.o)

# Compiler
CC = gcc

# Executable name
NAME = so_long

# Rules
all: $(NAME)

$(NAME): $(OBJS) $(MLX_LIB) $(LIBFT)
	$(CC) $(CFLAGS) $(OBJS) $(MLX_FLAGS) -L$(LIBFT_PATH) -lft -o $(NAME)

# Compile the MiniLibX library
$(MLX_LIB):
	@$(MAKE) -C $(MLX_PATH)

# Compile the libft library
$(LIBFT):
	@$(MAKE) -C $(LIBFT_PATH)

# Clean object files
clean:
	rm -f $(OBJS)
	@$(MAKE) -C $(MLX_PATH) clean
	@$(MAKE) -C $(LIBFT_PATH) clean

# Clean object files and executable
fclean: clean
	rm -f $(NAME)
	@$(MAKE) -C $(MLX_PATH) fclean
	@$(MAKE) -C $(LIBFT_PATH) fclean

# Recompile everything
re: fclean all

# Compile .o files
%.o: %.c
	$(CC) $(CFLAGS) -I$(MLX_PATH) -I$(LIBFT_PATH) -c $< -o $@

.PHONY: all clean fclean re
